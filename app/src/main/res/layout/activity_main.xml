<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="unimagdalena.edu.co.myfoursquare.MainActivity"
    android:weightSum="1"
    android:orientation="vertical"
    android:id="@+id/layoutPrincipal">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/linearLayoutImagenTitulo"
        android:layout_weight="0.7">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imagenTitulo"
            android:src="@mipmap/imagemainarriba"
            android:background="@mipmap/imagemainarriba" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.06">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/imageButtonDesayuno"

            android:background="@mipmap/desayuno"
            android:layout_weight="0.3" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/imageButtonAlmuerzo"

            android:background="@mipmap/almuerzo"
            android:layout_weight="0.3" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/imageButtonCena"

            android:background="@mipmap/cena"
            android:layout_weight="0.3" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.06">


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/imageButton"

            android:background="@mipmap/cafeyte"

            android:layout_weight="0.3" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/imageButton3"

            android:background="@mipmap/nocturna"
            android:layout_weight="0.3" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/imageButton4"

            android:background="@mipmap/cosasporhacer"
            android:layout_weight="0.3" />
    </LinearLayout>



</LinearLayout>
